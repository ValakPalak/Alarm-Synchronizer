<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dashImage"
        android:layout_width="132dp"
        android:layout_height="152dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashTitle"
        app:srcCompat="@drawable/profile_image" />

    <TextView
        android:id="@+id/dashNumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/open_sans_bold"
        android:padding="6dp"
        android:text="User Mobile Number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/dashImage"
        app:layout_constraintTop_toBottomOf="@+id/dashEmail" />

    <TextView
        android:id="@+id/dashName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/open_sans_bold"
        android:padding="6dp"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/dashImage"
        app:layout_constraintTop_toBottomOf="@+id/dashTitle" />

    <TextView
        android:id="@+id/dashEmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/open_sans_bold"
        android:padding="6dp"
        android:text="User Email"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/dashImage"
        app:layout_constraintTop_toBottomOf="@+id/dashName" />

    <TextView
        android:id="@+id/dashImageTitle"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="2dp"
        android:text="Click On Image to Upload"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/dashImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dashImage"
        app:layout_constraintTop_toBottomOf="@+id/dashImage" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/open_sans_bold"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dashTitle"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="User Dashboard"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>